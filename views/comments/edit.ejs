<% include ../partials/header %>

<div class="login-container container-fluid">
    <div class="row justify-content-center">
        <h1 class="login-h1">Edit Comment</h1>
    </div>
    
    <div class="row justify-content-center ">
        <form action="/posts/<%=post_id%>/comments/<%= comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>

            <div class="form-group">
                <button class="btn btn-outline-gray btn-lg btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>
