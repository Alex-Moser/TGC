<% include ../partials/header %>

<div class="login-container container-fluid">
    <div class="row justify-content-center">
        <h1 class="login-h1">Edit Your Post</h1>
    </div>
    <div class="row justify-content-center ">
        <form action= "/posts/<%=post._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="post[title]" value="<%= post.title %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="post[image]" value="<%= post.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="post[description]" value="<%= post.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-outline-gray btn-lg btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>
