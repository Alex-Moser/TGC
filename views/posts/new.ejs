<% include ../partials/header %>

<div class="login-container container-fluid">
        <div class="row justify-content-center">
                <h1 class="login-h1">Add a city</h1>
        </div>
        <div class="row justify-content-center ">
                <form action="/posts"
                    method="POST"
                    enctype="multipart/form-data">
                        <!-- Title input wrapper -->
                        <div class="form-group">
                                <input
                                    class="form-control"
                                    type="text"
                                    name="title"
                                    placeholder="Post Title">
                        </div>

                        <!-- File input wrapper -->
                        <div class="form-group">
                                <label for="image">
                                        Example file input
                                </label>
                                <input id="image"
                                    name="image"
                                    type="file"
                                    accept="image/*"
                                    class="form-control-file"
                                    required>
                        </div>

                        <!-- Description input wrapper -->
                        <div class="form-group">
                                <input
                                    class="form-control"
                                    type="text"
                                    name="description"
                                    placeholder="Description">
                        </div>

                        <!-- Submit btn wrapper -->
                        <div class="form-group comment-btn">
                                <button class="btn btn-light-gray-2 btn-lg btn-block">
                                        Submit
                                </button>
                        </div>
                </form><!-- New post form wrapper -->
        </div><!-- Wrapper for row containing form -->
</div><!-- .login-container wrapper ->

<% include ../partials/footer %>
